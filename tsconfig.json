{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "ES2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "rootDir": "src",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "baseUrl": "src"
   },
   "include": [
       "src/**/*"
   ]
}
